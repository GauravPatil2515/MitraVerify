# Environment variables for MitraVerify
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
# Development (SQLite)
DEV_DATABASE_URL=sqlite:///mitraverify_dev.db

# Production (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost/mitraverify

# Staging
STAGING_DATABASE_URL=postgresql://username:password@localhost/mitraverify_staging

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Google Cloud API Keys
GOOGLE_FACTCHECK_API_KEY=your-google-factcheck-api-key
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key
GOOGLE_CLOUD_LANGUAGE_API_KEY=your-google-cloud-language-api-key
GOOGLE_CLOUD_TRANSLATE_API_KEY=your-google-cloud-translate-api-key

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# WhatsApp Business API (Alternative to Twilio)
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@mitraverify.com

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# File Storage
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=mitraverify.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://mitraverify.vercel.app

# Social Media API Keys
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_CACHING=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_USER_ANALYTICS=true

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600

# Production Environment Variables (for deployment)
# Set these in your production environment (Heroku, AWS, etc.)
# Do not include actual production values in this file!

# Heroku specific
# HEROKU_APP_NAME=your-app-name
# HEROKU_POSTGRES_ADDON=heroku-postgresql:standard-0

# AWS specific
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=mitraverify-storage

# Google Cloud specific
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Security Settings (Production)
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax
